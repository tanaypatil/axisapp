<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="2700"
        android:fromAlpha="0.0"
        android:interpolator="@android:anim/accelerate_interpolator"
        android:toAlpha="1.0" />

    <rotate
        android:duration="1100"
        android:fromDegrees="-100"
        android:toDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        ></rotate>

    <scale
        android:duration="2500"
        android:fromXScale="0.75"
        android:fromYScale="0.75"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%" >
    </scale>

</set>