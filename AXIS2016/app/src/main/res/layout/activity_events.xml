<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".events.Events"
        android:weightSum="1"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:background="@drawable/evebckg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/ecolorPrimary"></LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">







                    <!--1st row-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="16dp"
                        android:baselineAligned="false">

                        <!--Flipper1-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper1"
                            android:outlineProvider="background"
                            android:layout_weight="0.4"
                            android:layout_marginRight="5dp"
                            android:elevation="7dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:longClickable="false"
                            android:background="#55f3f3f3">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="6dp"
                                android:outlineProvider="paddedBounds"
                                android:background="@drawable/ripple_darkp"
                                android:clickable="false"
                                android:id="@+id/f1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/AnR"
                                    android:id="@+id/anr"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/eveback1"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88f06292"
                                android:clickable="false"
                                android:id="@+id/b1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/cogs"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>


                        <!--Flipper2-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper2"
                            android:outlineProvider="background"
                            android:layout_weight="0.6"
                            android:layout_marginLeft="5dp"
                            android:elevation="9dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="#55f3f3f3"
                            android:clickable="true"
                            android:longClickable="false">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="6dp"
                                android:contextClickable="false"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/SE"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback2"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/se"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88ffb74d"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/child"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>



                    </LinearLayout>



                    <!--2ndrow-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:baselineAligned="false"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp">

                        <!--Flipper3-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper3"
                            android:layout_gravity="center"
                            android:elevation="15dp"
                            android:background="#55f3f3f3"
                            android:clickable="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="6dp"
                                android:focusable="false"
                                android:longClickable="false"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/SnE"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback3"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/sae"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88ba68c8"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/laptop"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>

                        </ViewFlipper>

                    </LinearLayout>


                    <!--row3-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="16dp"
                        android:baselineAligned="false">

                        <!--Flipper4-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper4"
                            android:outlineProvider="background"
                            android:layout_weight="0.5"
                            android:layout_marginRight="5dp"
                            android:elevation="6dp"
                            android:background="#55f3f3f3"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:longClickable="false">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="3dp"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/CnD"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback4"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/cad"
                                    android:textIsSelectable="false"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88aed581"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/building"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>


                        <!--Flipper5-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper5"
                            android:outlineProvider="background"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="bottom"
                            android:elevation="9dp"
                            android:background="#55f3f3f3"
                            android:clickable="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="6dp"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/MnO"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback5"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/mao"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#884dd0e1"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/briefcase"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>

                    </LinearLayout>




                    <!--row4-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="10dp"
                        android:baselineAligned="false">

                        <!--Flipper6-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper6"
                            android:outlineProvider="background"
                            android:layout_weight="0.4"
                            android:layout_marginRight="5dp"
                            android:elevation="6dp"
                            android:background="#55f3f3f3"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:longClickable="false">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="3dp"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/AiM"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback2"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/aim"
                                    android:textIsSelectable="false"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88FFB74D"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/light_bulb"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>


                        <!--Flipper7-->
                        <ViewFlipper
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flipper7"
                            android:outlineProvider="background"
                            android:layout_weight="0.6"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="bottom"
                            android:elevation="9dp"
                            android:background="#55f3f3f3"
                            android:clickable="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_darkp"
                                android:padding="6dp"
                                android:clickable="false">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/NE"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/eveback3"
                                    android:textAlignment="center"
                                    android:textStyle="bold|italic"
                                    android:id="@+id/ne"
                                    android:textSize="20sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#88BA68C8"
                                android:clickable="false">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/white_ripple">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/star"
                                        android:layout_centerInParent="true"/>

                                </RelativeLayout>

                            </RelativeLayout>


                        </ViewFlipper>

                    </LinearLayout>









                </LinearLayout>

            </ScrollView>







        </LinearLayout>

    </LinearLayout>

