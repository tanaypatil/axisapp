<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ebkgappblue"
    tools:context="com.developer.tanaypatil.axis2016.team.Design">

    <!--main content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tcolorPrimaryDark"></LinearLayout>

        <!--eve details-->

        <!--conT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="1"
            android:background="@drawable/white_ripple"
            android:clickable="true"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:id="@+id/tanaydesg"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desg"
                android:layout_weight="0.5"
                android:textSize="21sp"
                android:textColor="@color/acolorPrimaryDark"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_email_24dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
